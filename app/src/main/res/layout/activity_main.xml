<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:contentDescription="@string/app_name" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        android:contentDescription="@string/welcome_message" />
    
    <Button style="@android:style/TextAppearance.Large"
        android:id="@string/btn_id_enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_keyboard_settings"
        android:onClick="onKeyboardSettings"
        android:contentDescription="@string/button_keyboard_settings" />
        
    <Button style="@android:style/TextAppearance.Large" 
        android:id="@string/btn_id_default_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_choose_default_keyboard"
        android:onClick="onDefaultInputMethod"
        android:contentDescription="@string/button_choose_default_keyboard" />
        
    <EditText
        android:id="@string/txt_id_practice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textMultiLine"
        android:hint="@string/try_box"
        android:minLines="3"
        android:contentDescription="@string/try_box" />
        
    <Button style="@android:style/TextAppearance.Large" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_more_info"
        android:onClick="onURL"
        android:contentDescription="@string/button_more_info" />
        
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/screen_reader_compatible"
        android:textSize="14sp"
        android:paddingTop="16dp"
        android:textStyle="italic"
        android:contentDescription="@string/screen_reader_compatible" />
</LinearLayout>
